<div class="barra-topo"></div>

<main>
  <!-- Formulário de Cadastro de Produto -->
  <div class="container mx-auto px-6 py-12">
    <h2 class="text-3xl font-semibold mb-6 text-center text-white">Cadastro de Produto</h2>

    <form action="/produto/criar" method="POST" enctype="multipart/form-data">
      <!-- Nome do Produto -->
      <div class="mb-4">
        <label for="nome" class="block text-lg font-semibold text-white">Nome do Produto</label>
        <input type="text" id="nome" name="nome" class="input input-bordered w-full mt-2" required>
      </div>

      <!-- Descrição do Produto -->
      <div class="mb-4">
        <label for="descricao" class="block text-lg font-semibold text-white">Descrição do Produto</label>
        <textarea id="descricao" name="descricao" class="textarea textarea-bordered w-full mt-2" rows="4" required></textarea>
      </div>

      <!-- valor do Produto -->
      <div class="mb-4">
        <label for="valor" class="block text-lg font-semibold text-white">valor (R$)</label>
        <input type="number" id="valor" name="valor" class="input input-bordered w-full mt-2" required>
      </div>

      <!-- Imagem do Produto -->
      <div class="mb-4">
        <label for="imagem" class="block text-lg font-semibold text-white">Imagem do Produto</label>
        <input type="file" id="imagem" name="imagem" class="file-input file-input-bordered w-full mt-2" required>
      </div>

      <!-- Categoria do Produto -->
      <div class="mb-4">
        <label for="categoria" class="block text-lg font-semibold text-white">Categoria</label>
        <select id="categoria" name="categoria" class="select select-bordered w-full mt-2" required>
          <option value="painel-solar">Painel Solar</option>
          <option value="inversor">Inversor</option>
          <option value="bateria">Bateria Solar</option>
          <option value="acessorio">Acessório</option>
        </select>
      </div>

      <!-- Botão de Enviar -->
      <div class="flex justify-center">
        <button type="submit" class="btn btn-primary mt-6">Cadastrar Produto</button>
      </div>
    </form>
  </div>
</main>

